{
  "compilerOptions": {
    "module": "esnext",
    "target": "es3",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "sourceMap": false,
    "allowJs": true,
    "jsx": "react",
    "lib": ["es6", "dom"],
    "baseUrl": ".",
    "paths": {
      "*": ["*"],
      "~/*": ["src/*"],
      "~@/*": ["src/components/*"],
      "@/*": ["../../../output/*"]
    }
  },
  "include": ["src/**/*"]
}
